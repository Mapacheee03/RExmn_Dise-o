<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RExmn_Diseño.MainPage">

    <StackLayout>
        <Label x:Name="MontoTotal"
               Text="Monto total de la cuenta"
               />
        <Entry x:Name="MontoEnt"
               Keyboard="Numeric"/>
        <Label x:Name="Porcentajepropina"
               Text="Porcentaje de propina"/>
        <Entry x:Name="porcentajePropina"
               Keyboard="Numeric"/>
        <Label x:Name="NumPerson" 
               Text="Numero de personas" />
        <Entry x:Name="numeroPersona"
               Keyboard="Numeric"/>

        <Button Clicked="MostrarDatos_Clicked" 
                Text="Calcular"/>

    </StackLayout>

</ContentPage>
